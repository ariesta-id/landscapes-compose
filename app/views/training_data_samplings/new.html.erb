<div class="card">
  <div class="card-header">
    Create training data
  </div>
  <div class="card-body">
    <%= form_with(
      model: @sampler,
      url: [@labelling_group, :training_data_samplings],
      data: {
        controller: "form",
        action: "ajax:error->form#onError",
      },
    ) do |f| %>
      <div class="form-group">
        <%= f.label :name, "Create a new training data labelling named" %>
        <%= f.text_field :name, class: "form-control", data: { "form-target": "field", field: "name" } %>
      </div>

      <div class="form-group">
        By randomly sampling
        <%= f.number_field :num_samples_per_label, min: 1, style: "width: 100px", class: "form-control d-inline-block", data: { "form-target": "field", field: "num_samples_per_label" } %>
        tiles of each type (label) from each layer
      </div>

      <%= f.submit "Create training data", class: "btn btn-primary" %>
      <%= link_to "Cancel", @labelling_group, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
