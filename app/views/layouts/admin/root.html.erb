<%= extends :admin do %>
  <% content_for :sidebar_header do %>
    Admin tools
  <% end %>
  
  <% content_for :sidebar_content do %>
    <%= render "sidebar_link", path: [:admin, :regions] do %>
      <i class="fas fa-map-marked fa-fw"></i>
      Regions
    <% end %>
    <%= render "sidebar_link", path: [:admin, :label_schemas] do %>
      <i class="fas fa-tags fa-fw"></i>
      Label schemas
    <% end %>
    <%= render "sidebar_link", path: [:admin, :models] do %>
      <div class="d-flex align-items-center">
        <div class="flex-grow-1">
          <i class="fas fa-code fa-fw"></i>
          Models
        </div>
      </div>
    <% end %>
    <%= render "sidebar_link", path: [:admin, :users] do %>
      <i class="fas fa-users fa-fw"></i>
      People
    <% end %>
  <% end %>

  <%= yield %>
<% end %>
