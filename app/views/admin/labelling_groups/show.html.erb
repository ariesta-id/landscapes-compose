<div class="card mb-3">
  <div class="card-header d-flex align-items-center justify-content-between">
    <span>
      <%= link_to "Labellings", [:admin, @labelling_group.region, :labelling_groups] %>
      /
      <%= @labelling_group.name %>
    </span>
    <div class="btn-toolbar">
      <div class="btn-group btn-group-sm mr-2">
        <%= link_to @labelling_group, target: "_blank", class: "btn btn-outline-primary", title: "View" do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to [:admin, @labelling_group, :training_data_sampling, action: :new], class: "btn btn-outline-primary", title: "Create training data by randomly sampling this labelling" do %>
          <i class="fas fa-dice"></i>
        <% end %>
        <%= link_to [:admin, @labelling_group, :training_data_downloads], method: :post, class: "btn btn-outline-primary", title: "Download as training data" do %>
          <i class="fas fa-download"></i>
        <% end %>
      </div>
      <div class="btn-group btn-group-sm">
        <%= link_to [:admin, @labelling_group, :duplicates], method: :post, class: "btn btn-outline-primary", title: "Duplicate" do %>
          <i class="fas fa-clone"></i>
        <% end %>
        <% if @labelling_group.locked? %>
          <%= link_to [:admin, @labelling_group, :lock], method: :delete, class: "btn btn-outline-primary", title: "Unlock" do %>
            <i class="fas fa-unlock"></i>
          <% end %>
          <button class="btn btn-outline-primary" disabled>
            <i class="fas fa-edit"></i>
          </button><button class="btn btn-outline-danger" disabled>
            <i class="fas fa-trash"></i>
          </button>
        <% else %>
          <%= link_to [:admin, @labelling_group, :lock], method: :post, class: "btn btn-outline-primary", title: "Lock" do %>
            <i class="fas fa-lock"></i>
          <% end %>
          <%= link_to [:admin, @labelling_group, action: :edit], class: "btn btn-outline-primary", title: "Rename" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to [:admin, @labelling_group], method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete this labelling?" }, title: "Delete" do %>
            <i class="fas fa-trash"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="list-group list-group-flush">
    <% if @labelling_group.locked? %>
      <div class="list-group-item list-group-item-warning">
        <i class="fas fa-lock"></i>
        This labelling has been <strong>locked</strong> to prevent editing.
      </div>
    <% end %>
    <% @region.map_tile_layers.pluck(:name).sort.each do |layer| %>
      <% @labelling_group.labellings.includes(:map_tile_layer).find_by('map_tile_layers.name': layer).tap do |labelling| %>
        <div class="list-group-item d-flex align-items-center justify-content-between">
          <span class="<%= "text-muted" if labelling.nil? %>">
            <i class="fas fa-layer-group"></i>
            <%= layer %>
          </span>
          <% unless @labelling_group.locked? %>
            <div class="btn-group btn-group-sm">
              <% unless labelling.nil? %>
                <%= link_to [:admin, :labelling_correction, action: :new, labelling_id: labelling.id], class: "btn btn-outline-primary" do %>
                  <i class="fas fa-tag"></i>
                  Reclassify tiles
                <% end %>
                <%= link_to [:admin, labelling, action: :edit], target: "_blank", class: "btn btn-outline-primary" do %>
                  <i class="fas fa-paint-brush"></i>
                  Open editor
                <% end %>
                <%= link_to [:admin, labelling], method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete layer '#{layer}' for labelling '#{@labelling_group.name}'?" } do %>
                  <i class="fas fa-trash"></i>
                  Delete layer
                <% end %>
              <% else %>
                <%= button_to [:admin, @labelling_group, :labellings], params: { labelling: { map_tile_layer_id: @labelling_group.region.map_tile_layers.find_by!(name: layer).id } }, class: "btn btn-sm btn-outline-primary" do %>
                  <i class="fas fa-plus"></i>
                  Create layer
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
