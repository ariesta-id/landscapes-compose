<div class="card mb-3">
  <div class="card-header">Settings</div>
  <div class="card-body">
    <%= render "form" %>
  </div>
</div>
<div class="card mb-3">
  <div class="card-header">Duplicate</div>
  <div class="card-body">
    <div class="alert alert-info">
      Creates a copy of this schema, including all labels.<br>
      Does not copy labellings based on this schema.
    </div>
    <%= button_to "Duplicate", label_schema_duplicates_path(@label_schema), class: "btn btn-primary" %>
  </div>
</div>
<div class="card">
  <div class="card-header">Delete label schema</div>
  <div class="card-body">
    <% @label_schema.labelling_groups.count.tap do |count| %>
      <% if count > 0 %>
        <div class="alert alert-warning mb-0">
          <i class="fas fa-info-circle"></i>
          You cannot delete this label schema, as it is used in
          <%= pluralize count, "labelling" %>.
        </div>
      <% else %>
        <%= link_to @label_schema, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this label schema?" } do %>
          Delete
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
